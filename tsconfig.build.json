{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "examples",
    "temp",
    "src/**/*.md"
  ]
}
